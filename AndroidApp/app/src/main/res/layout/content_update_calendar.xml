<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_update_calendar"
    tools:context="com.example.luigidigirolamo.calendar.UpdateCalendarActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editnamecalendar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editdescriptioncalendar"
        android:layout_below="@+id/editnamecalendar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:layout_alignRight="@+id/editnamecalendar"
        android:layout_alignEnd="@+id/editnamecalendar"
        android:hint="Description" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/deletecalendar"
        android:backgroundTint="#FF0000"
        android:layout_alignTop="@+id/updatecalendar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="DeleteCalendar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/updatecalendar"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/editdescriptioncalendar"
        android:layout_alignEnd="@+id/editdescriptioncalendar"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp"
        android:onClick="UpdateCalendar" />

</RelativeLayout>
